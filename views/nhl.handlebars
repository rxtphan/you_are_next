<div class='main'>
  {{#each positions}}
    <div class='panel {{color}}'>
      <div class='panel-heading'>
        <span>{{name}}</span>
        <span class='glyphicon glyphicon-plus-sign' onclick='toggleSectionVisibility(event)'></span>
      </div>
    </div>
    <div class='panel-body'>
      <div class='container-fluid'>
        <div class='row'>
          {{#each stats}}
            {{> stat id=id name=name max=max default=default}}
          {{/each}}
        </div>
      </div>
    </div>
  {{/each}}

  <button class='btn btn-danger btn-lg btn-block' onclick='doIt();'>
    Dominate!
  </button>

  <div id="resultsBox" style="display: none;">
    <h2 class='text-center'>Custom rankings</h2>
    <table class='table table-striped table-bordered' id='rankingsTable'>
    </table>
  </div>
</div>
